
PACKAGE=livemusicapp
VERSION=1.3.0

AC_INIT(livemusicapp, 1.3.0)
AM_INIT_AUTOMAKE
AC_CONFIG_SRCDIR([./])

GTKLIB_REQUIRED_VERSION=3.0.0
PKG_CHECK_MODULES(GTKLIB, gtk+-3.0 >= $GTKLIB_REQUIRED_VERSION)

